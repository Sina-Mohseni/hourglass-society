* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Samsung One', sans-serif;
    background: #000;
    color: #fff;
    overflow: hidden;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Text stroke for better visibility */
h1, h2, h3, h4, h5, h6, p, span, a, button, div, label {
    text-shadow: 
        -1px -1px 0 #000,
        1px -1px 0 #000,
        -1px 1px 0 #000,
        1px 1px 0 #000,
        0 0 3px rgba(0,0,0,0.8);
}

/* Background Video - Inside smartphone frame */
#backgroundVideo {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
}

.background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('https://images.unsplash.com/photo-1557683316-973673baf926?w=800&auto=format&fit=crop') center/cover;
    z-index: 0;
}

.background-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.2) 100%);
    z-index: 1;
    pointer-events: none;
}

/* Smartphone Frame */
.smartphone-frame {
    width: 100%;
    max-width: 420px;
    height: 100vh;
    max-height: 900px;
    background: linear-gradient(145deg, #1a1a1a, #0a0a0a);
    border-radius: 50px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 30px 60px rgba(0,0,0,0.8), inset 0 0 30px rgba(255,255,255,0.05);
    border: 3px solid #333;
}

/* Responsive - Mobile */
@media (max-width: 768px) {
    body {
        overflow: hidden;
        position: fixed;
        width: 100%;
        height: 100vh;
        height: 100dvh;
    }
    
    .smartphone-frame {
        max-width: 100%;
        height: 100vh;
        height: 100dvh;
        max-height: 100vh;
        max-height: 100dvh;
        border-radius: 0;
        border: none;
    }
    
    .status-bar {
        padding-top: env(safe-area-inset-top);
    }
    
    .screen-content {
        height: calc(100% - 40px - env(safe-area-inset-top) - env(safe-area-inset-bottom));
    }
}

/* Status Bar */
.status-bar {
    height: 40px;
    background: rgba(0,0,0,0.8);
    backdrop-filter: blur(10px);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
    font-size: 12px;
    position: relative;
    z-index: 1000;
}

.status-left {
    display: flex;
    align-items: center;
    gap: 8px;
    flex: 0 0 auto;
}

.status-right {
    display: flex;
    align-items: center;
    gap: 8px;
    flex: 0 0 auto;
}

.status-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 10px;
    z-index: -1;
}

.camera-cutout {
    width: 10px;
    height: 10px;
    background: #000;
    border-radius: 50%;
    border: 1px solid #333;
}

.time-date-container {
    display: flex;
    flex-direction: column;
    gap: 2px;
    align-items: center;
    justify-content: center;
}

#currentTime {
    font-size: 12px;
    font-weight: 600;
}

#currentDate {
    font-size: 9px;
    opacity: 0.8;
}

.settings-icon, .notifications-icon, .home-icon, .urgent-message-btn, .membres-icon, .calendar-icon {
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s;
    position: relative;
}

.settings-icon:hover, .notifications-icon:hover, .home-icon:hover, .membres-icon:hover, .calendar-icon:hover {
    background: rgba(255,255,255,0.2);
    transform: scale(1.1);
}

.settings-icon.active, .notifications-icon.active, .home-icon.active, .membres-icon.active, .calendar-icon.active {
    background: rgba(255,255,255,0.3);
}

.settings-icon svg, .notifications-icon svg, .home-icon svg, .membres-icon svg, .calendar-icon svg {
    display: block;
}

.urgent-message-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s;
    position: relative;
    animation: urgentPulse 2s infinite;
}

@keyframes urgentPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.15); }
}

.urgent-message-btn:hover {
    background: rgba(255, 107, 107, 0.3);
    transform: scale(1.2);
}

.urgent-message-btn svg {
    display: block;
}

.notification-badge {
    position: absolute;
    top: 0;
    right: 0;
    background: #ff4444;
    color: #fff;
    font-size: 10px;
    font-weight: 700;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #000;
}

/* Commander Modal */
.commander-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.9);
    backdrop-filter: blur(10px);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    animation: modalFadeIn 0.3s;
}

.commander-modal.active {
    display: flex;
}

@keyframes modalFadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.commander-modal-content {
    background: rgba(20,20,20,0.95);
    border: 2px solid #ff4444;
    border-radius: 20px;
    max-width: 350px;
    width: 90%;
    padding: 0;
    box-shadow: 0 20px 60px rgba(255,68,68,0.3);
    animation: modalSlideIn 0.3s;
}

@keyframes modalSlideIn {
    from {
        transform: translateY(-50px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}


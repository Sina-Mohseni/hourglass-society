    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 60px;
}

.character-detail-name {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 10px;
}

.character-detail-title {
    font-size: 16px;
    color: #aaa;
    margin-bottom: 20px;
}

.character-detail-bio {
    font-size: 14px;
